## List empty directories for directories without index page
#IndexIgnore *
Options -Indexes

## Default index page in any directory
DirectoryIndex index.php

## Display .php Files as .PHP
AddType Application/x-httpd-php .php

# Redirect to HTTPS
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]



# php -- BEGIN cPanel-generated handler, do not edit
# Set the “ea-php74” package as the default “PHP” programming language.
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php74 .php .php7 .phtml
</IfModule>
# php -- END cPanel-generated handler, do not edit


## Increase the execution time of any script
<IfModule mod_php7.c>
php_value max_execution_time 0
</IfModule>

## Permission not granted Page
ErrorDocument 403 "<h1>You are not allowed to access this directory</h1><a href='https://ugasolutions.co.ug/'>Back to Home</a>"
#RedirectMatch 403 /classes(.*) http://xitecsolutions.com/emis/error403.php$1

## DENY REQUEST BASED ON REQUEST METHOD
RewriteCond %{REQUEST_METHOD} ^(TRACE|TRACK|OPTIONS|HEAD)$ [NC]
RewriteRule ^.*$ - [F]

## REQUIRE SSL EVEN WHEN MOD_SSL IS NOT LOADED
#RewriteCond %{HTTPS} !=on [NC]
#RewriteRule ^.*$ https://%{xitecsolutions.com}%{emis} [R,L]

## Safe Request Methods
RewriteCond %{REQUEST_METHOD} !^(GET|POST)$ [NC]
RewriteRule .? - [F,NS,L]

## Defaults for the Server
DefaultLanguage en-US
AddDefaultCharset UTF-8
ServerSignature Off

## Not Found Error Handling
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-l
RewriteRule ^(.+)$ 404.php?url=$1 [QSA,L]

